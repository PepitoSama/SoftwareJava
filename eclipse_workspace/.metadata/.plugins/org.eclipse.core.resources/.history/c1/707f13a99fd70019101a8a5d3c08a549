package fr.polymontp.guyon.saimond.entreprise;

import java.util.ArrayList;
import java.util.Arrays;

public class Entreprise2 {
	private int max;
	private ArrayList<Employe> employes = new ArrayList<Employe>();
	private int nbEmploye;
	private String name;
	
	public int getNbEmploye() {
		return nbEmploye;
	}

	public void setNbEmploye(int nbEmploye) {
		this.nbEmploye = nbEmploye;
	}

	public Entreprise2 (String name, int max) {
		this.setMax(max);
		this.setName(name);
		this.setEmployes(new Employe[max]);
		this.setNbEmploye(0);
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public void setEmployes(ArrayList<Employe> employes) {
		this.employes = employes;
	}

	public int getMax() {
		return max;
	}

	public void setMax(int max) {
		this.max = max;
	}
}
