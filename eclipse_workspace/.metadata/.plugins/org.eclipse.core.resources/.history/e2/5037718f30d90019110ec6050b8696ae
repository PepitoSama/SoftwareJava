
package fr.polymontp.guyon.saimond.entreprise;

import java.util.Comparator;

public class SalaryComparator implements Comparator {
	private int sign;
	public final static int ASCENDING_ORDER = 1;
	public final static int DESCENDING_ORDER = -1;
	
	// CONSTRUCTOR
	public SalaryComparator (int sign) {
		this.setSign(sign);
	}
	
	// GET / SET

	public int getSign() {
		return sign;
	}

	public void setSign(int sign) {
		this.sign = sign;
	}

	public static int getAscendingOrder() {
		return ASCENDING_ORDER;
	}

	public static int getDescendingOrder() {
		return DESCENDING_ORDER;
	}
}
